<article class="layout-designers">

	<div class="layout-container">

		<article class="layout-designer-expanded">

			<% @projects.limit(5).each do |project| %>

				<div id="project-<%= project.id %>" class="layout-project-expanded">

					<div class="layout-one-column-grid">

						<h4 class="expanded-project-name"><%= project.title %></h4>
						<h5 class="expanded-designer-name"><%= project.designer %></h4>

					</div>

					<div class="layout-one-column-grid"></div>

					<div class="layout-two-column-grid column-right">

						<p class="expanded-project-description">
							<%= project.description %>
						</p>

						<a href="mailto:<%= project.email %>?Subject=Great%20Project!" class="expanded-email">Email Designer</a>

						<a class="expanded-url" href="<%= project.url %>">Visit Website</a>

					</div>

					<div class="layout-project-pictures">

						<img src="images/db-img/project<%= project.id %>/img_1.jpg"/>

					</div>

				</div>

			<% end %>

		</article>

