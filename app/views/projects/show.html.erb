<article class="layout-designer-expanded">

	<div class="layout-two-column-grid">
							
		<h4 class="expanded-project-name"><%= @project.title %><%= @project.id %> - <%= @project.designer %></h4>

		<a class="link-expanded-email" href="<%= @project.url %>"><%= @project.url %></a>

		<a class="link-expanded-email" href="mailto:<%= @project.email %>?Subject=Great%20Project!" ><%= @project.email %></a>

		<a class="link-expanded-email" href="https://twitter.com/<%= @project.twitter %>" >@<%= @project.twitter %></a>

		<div class="swiper-container">

			<div class="swiper-wrapper">

	            <div class="swiper-slide">

	            		<%= image_tag("#{::Rails.root.to_s}/db-img/project#{@project.id}/1.jpg") %>
	            
				</div>

	            <div class="swiper-slide">

	            	<img class="image-projects" src="assets/db-img/project<%= @project.id %>/2.jpg"/>

	            </div>

	            <div class="swiper-slide">

	            	<img class="image-projects" src="assets/db-img/project<%= @project.id %>/3.jpg"/>

	            </div>
	        
	        </div>

			    <div class="swiper-button-next"></div>

				<div class="swiper-button-prev"></div>

		</div>

	</div>

	<div class="layout-two-column-grid layout-column-right">

		<a href="" class="link-back-to-all"></a>

		<p class="expanded-project-description">
			<%= @project.description %>
		</p>

	</div>

</article>


